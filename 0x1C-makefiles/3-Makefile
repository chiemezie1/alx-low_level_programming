# Makefile to build the school executable
# Variables:
# CC: the compiler to be used
# SRC: the .c files
# OBJ: the .o files
# NAME: the name of the executable
# RM: the command to remove files

CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -f

# Default rule
all: $(NAME)

# Rule to build the executable
$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

# Rule to build object files
%.o: %.c
	$(CC) -c $< -o $@

# Rule to delete object files
clean:
	-$(RM) $(OBJ)

# Rule to delete the executable and object files
oclean:
	-$(RM) $(OBJ)

# Rule to delete all Emacs and Vim temporary files, the executable, and object files
fclean: clean
	-$(RM) $(NAME)

# Rule to force recompilation of all source files
re: fclean all
